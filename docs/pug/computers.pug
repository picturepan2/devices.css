extends _layout/_layout.pug

block variables
  - var slug = 'computers'
  - var parent = 'computers'
  - var title = 'Computers - Devices.css - Modern devices crafted in pure CSS'
  - var description = 'Pure CSS MacBook Pro, iMac, MacBook Pro (2018), MacBook, Surface Book, Surface Studio devices. Pure CSS computer devices mockups. Modern computer devices crafted in pure CSS.'

block content
  .container.grid-md
    .columns
      .hero-container.column.col-md-12
        .rework-hero
          .hero-content
            h1.hero-title Computers
            h2.hero-subtitle Modern computer devices crafted in pure CSS
            h2.text-assistive Pure CSS MacBook Pro, iMac, MacBook Pro (2018), MacBook, Surface Book, Surface Studio devices. Pure CSS computer devices mockups. Modern computer devices crafted in pure CSS.

    .columns
      .content-container.column.col-md-12
        h2.rework-title#macbook-pro
          | MacBook Pro
          a.ml-2(href="#macbook-pro") #
        h3.text-assistive Pure CSS MacBook Pro, MacBook Pro in pure CSS
        .rework-content
          p The new MacBook Pro. Incredible performance with the M1 Pro or M1 Max chip. Amazing battery life. And a 14” or 16” Liquid Retina XDR display.
        .rework-device.computers
          .dots
            .dot.tooltip.active(style="background:#e2e3e4;" data-tooltip="device-silver (default)")
            .dot.tooltip(style="background:#83878a;" data-tooltip="device-spacegray")
          .rework-device-container
            .device.device-macbook-pro
              .device-frame
                img.device-screen(src="assets/img/bg-10.jpg" loading="lazy")
              .device-stripe
              .device-header
              .device-sensors
              .device-btns
              .device-power
              .device-home

    include _layout/_ad-g.pug

    .columns
